  79          //initialise programmable counter array module to generate pwm
  80          //The CCAPnH register holds the reload value. CCAPnL register increments,and is loaded with this value eve
             -rytime it overflows
  81          void pca_init(void)
  82          {
  83   1       CMOD=0x80;    //80 sets PCA counter to run at Fosc/6; 
  84   1       CCON=0x40;    //start PCA counter
  85   1                                                      
  86   1       CCAP0L=0x00;   
  87   1       CCAP0H=0xFF;  //Left motor duty cycle register
  88   1        
  89   1       CCAP1L=0x00;                             
  90   1       CCAP1H=0xFF;  //Right motor duty cycle register
  91   1      
  92   1       CCAPM0=0x42;  //enable PWM mode and ECOM bits for PWM_0
  93   1       CCAPM1=0x42;  //enable PWM mode and ECOM bits for PWM_1
  94   1      }
  95          
  96          void main()
  97          {
  98   1      pca_init();
  99   1      PWM_0(0x40);   //0x00 will give full (100% duty cycle) , while 0xFF will give zero (0% duty cycle).             
 100   1      PWM_1(0x60);   //0x00 will give full (100% duty cycle) , while 0xFF will give zero (0% duty cycle). 
 101   1      while(1);
 102   1      }
