  60          //initializing timer/counter0 as counter in mode 2
  61          void  timer0_setup(void)   
  62          {
  63   1       TMOD=0x06; // Timer 1 in 8 bit external counter mode
  64   1       TH0=0x00;  // reset counter value to 0       
  65   1       TL0=0x00;  // reset counter value to 0  
  66   1      }
  67          
  68          void main(void)
  69          {
  70   1       unsigned char count;
  71   1       unsigned char A=0;
  72   1       timer0_setup();                     //initializing timer/counter0
  73   1       P1=0x00;
  74   1       while(1)                                //loop continuously
  75   1       {
  76   2       TR0=1;
  77   2       if(A!=TL0)                         //TL0 contain count 
  78   2       {                
  79   3        count=TL0;                     //count 
  80   3        P1=count;                                     //count on PORT 1
  81   3       }
  82   2        A=TL0;
  83   2       }
  84   1      }
