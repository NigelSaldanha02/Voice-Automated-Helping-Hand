<?xml version="1.0"?>
<robot name="Dexter_ER2">

  <!-- ================= BASE ================= -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.08"/>
      </geometry>
    </visual>
  </link>

  <!-- ================= LINK 1 ================= -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="0.082" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0.041"/>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>

  <!-- ================= LINK 2 ================= -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="0.086" radius="0.02"/>
      </geometry>
      <!-- rotate cylinder to lie along X -->
      <origin xyz="0.043 0 0" rpy="0 1.5708 0"/>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.082"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- ================= LINK 3 ================= -->
  <link name="link3">
    <visual>
      <geometry>
        <cylinder length="0.077" radius="0.02"/>
      </geometry>
      <origin xyz="0.0385 0 0" rpy="0 1.5708 0"/>
    </visual>
  </link>

  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.086 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- ================= LINK 4 ================= -->
  <link name="link4">
    <visual>
      <geometry>
        <cylinder length="0.085" radius="0.018"/>
      </geometry>
      <origin xyz="0.0425 0 0" rpy="0 1.5708 0"/>
    </visual>
  </link>

  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0.077 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="1"/>
  </joint>

  <!-- ================= LINK 5 (WRIST) ================= -->
  <link name="link5">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
    </visual>
  </link>

  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0.085 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- ================= END EFFECTOR ================= -->
  <link name="ee_link">
    <visual>
      <geometry>
        <cylinder length="0.11" radius="0.015"/>
      </geometry>
      <origin xyz="0.055 0 0" rpy="0 1.5708 0"/>
    </visual>
  </link>

  <joint name="ee_fixed" type="fixed">
    <parent link="link5"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.02"/>
  </joint>

</robot>
